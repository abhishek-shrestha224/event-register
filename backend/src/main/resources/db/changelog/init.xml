<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Create Users Table -->
    <changeSet id="1" author="your_name">
        <createTable tableName="users">
            <column name="user_id" type="UUID">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="phone_number" type="VARCHAR(10)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create Events Table -->
    <changeSet id="2" author="your_name">
        <createTable tableName="events">
            <column name="event_id" type="UUID">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="venue" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="event_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!-- Create Badges Table -->
    <changeSet id="3" author="your_name">
        <createTable tableName="badges">
            <column name="badge_id" type="UUID">
                <constraints primaryKey="true" nullable="false" unique="true"/>
            </column>
            <column name="registration_type" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="photo_path" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="event_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <!-- Add Foreign Keys -->
        <addForeignKeyConstraint baseTableName="badges" baseColumnNames="user_id"
                                 referencedTableName="users" referencedColumnNames="user_id"
                                 constraintName="fk_badge_user"/>

        <addForeignKeyConstraint baseTableName="badges" baseColumnNames="event_id"
                                 referencedTableName="events" referencedColumnNames="event_id"
                                 constraintName="fk_badge_event"/>
    </changeSet>

</databaseChangeLog>